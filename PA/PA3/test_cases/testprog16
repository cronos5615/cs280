# Testing mixed-mode expressions
	$r = 50;
	$x = 6;
	$y = -8 * $x;
	flag = 'true';
	if (flag && $x == 6) {
		$y_1 = -5;
		flag = 'hello' . $y_1 * 4;
	}
	else {
		$y_1 = -!(7.5);
		flag = 'goodbye';
	};
	$res = ($r * ($y + $x ** 2)) / $y - $x;
	println ('$res = ', $res, ", ", '$y_1 = ', $y_1, ", ", 'flag = "', flag, '"');
