#Missing closing parenthesis for an expression
	$r = 50;
	$x = 6;
	$y = -8 * $x;
	flag = 'true';
	if (flag @eq 'true') {
		$y_1 = -5;
		flag = 'hello' . $y_1 * 4;
	}
	else {
		$y_1 = -(7.5);
		flag = 'goodbye';
	};
	$res = ($r * ($y + $x) / $y - $x;
	println ('Value = ', $r ** (3 * 2) ** $x, '$y_1 = ', flag);
	$r = $r + flag;
